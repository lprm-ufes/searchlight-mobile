
div#pgnoteview(data-role="page", data-theme="a")
    div(data-role="header")
        a.ui-btn.ui-btn-left.ui-btn-inline.ui-mini.ui-corner-all.ui-btn-icon-left.ui-icon-back(href="#pghistorico") Voltar
        h1 Searchlight 
        a.ui-btn-right.ui-mini.btn-deletar-nota(data-role='button',data-inline='true')
            i.fa.fa-trash-o
            span  
            
 
    div(data-role="content")
        div#mapa(style="height:200px;width:100%")
        div.ui-body.ui-body-a
            p.categoria
            p.comentarios
            p.foto
            fieldset.ui-grid-a.video
                div.ui-block-a 
                    img#notevideo(width='100%')

                div.ui-block-b(style="text-align:center")
                    a.btn-tocar-video.ui-btn.ui-shadow.ui-corner-all
                       i.fa.fa-2x.fa-youtube-play
                       span &nbsp; 
      
        
                    
 
            p.data
            p
                a.btn-adicionar-nota(data-role='button')
                    i.fa.fa-plus
                    span  &nbsp;Adicionar nota
        div
            ul#ulfilhos(data-role="listview",data-inset="true",data-shadow='false')

    div(data-role="footer", data-position="fixed")
        h4 &copy UFES

